<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.felink.guihubcode">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MarqueeActivity"/>
        <activity android:name=".RecyclerView.RecyclerActivity"/>
        <activity android:name=".RecyclerView.RecyclerClickActivity"/>
        <activity android:name=".RecyclerView.HeaderAndFooterActivity"/>
        <activity android:name=".RecyclerView.MoreRecyclerActivity"/>
        <activity android:name=".RecyclerView.AllRecyclerActivity"/>
        <activity android:name=".RecyclerView.CollapsingToolbarLayoutActivity"
            android:theme="@style/SupportTheme"/>
        <activity android:name=".RecyclerView.EmptyViewActivity"
            android:theme="@style/SupportTheme"/>
        <activity android:name=".RecyclerView.GridActivity"
            android:theme="@style/SupportTheme"/>
        <activity android:name=".RecyclerView.LinearActivity"
            android:theme="@style/SupportTheme"/>
        <activity android:name=".RecyclerView.MultiHeaderActivity"
            android:theme="@style/SupportTheme"/>
        <activity android:name=".RecyclerView.StaggeredGridActivity"
            android:theme="@style/SupportTheme"/>
        <activity android:name=".RecyclerView.DeleteItemRecyclerActivity"
            android:theme="@style/SupportTheme"/>
    </application>

</manifest>